@model net_signalr.Models.ProductViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Insert Product</h4>
</div>
<div class="modal-body">

    <div class="form-group">
        @Html.LabelFor(model => model.ProductName,  new { @class = "control-label" })
        @Html.TextBoxFor(model => model.ProductName, new { id = "ProductName", @class = "form-control text-center" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Category, new { @class = "control-label" })
        @*@Html.TextBoxFor(model => model.Category, new { id = "Category", @class = "form-control text-center" })*@
        @Html.DropDownListFor(model => model.SelectedCategory, new SelectList(ViewBag.categories, "Value", "Text"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Price, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Price, new { id = "Price", @class = "form-control text-center" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Quantity, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Quantity, new { id = "Quantity", @class = "form-control text-center" })
    </div>
</div>
<div class="modal-footer">
    <a href="#" class="btn btn-primary" data-dismiss="modal">Close</a>
    <button id="buttonInsert" type="submit" class="btn btn-primary btnSubmitInsert">Save Changes</button>
</div>

@section scripts {
    <script type="text/javascript">
    $(document).on('click', '#buttonInsert', function () {
        $('#insert-product').modal('hide');
        return false;
    });
    </script>
}
